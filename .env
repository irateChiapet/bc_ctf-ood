# Environment configuration for OpenOnDemand with Keycloak
# Modify these values as needed for your deployment

# Hostname for the deployment (without protocol)
#HOSTNAME=192.168.1.69
HOSTNAME="ood.mncc.local"

# Keycloak configuration
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123
KEYCLOAK_HTTPS_PORT=8443
KEYCLOAK_HTTP_PORT=8080  # Keep for internal communication during startup
#KC_HOSTNAME="kc.hpc.local"

# OpenOnDemand configuration  
OOD_HTTP_PORT=80
OOD_HTTPS_PORT=443

# OIDC client configuration
OIDC_CLIENT_SECRET=ondemand-secret-123
OIDC_CRYPTO_PASSPHRASE=openondemand-crypto-passphrase-change-me
